{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@benfen/bfc.js/transactions": ["../../sdk/typescript/src/builder/export.ts"],
			"@benfen/bfc.js/*": ["../../sdk/typescript/src/*"],
			"@benfen/bfc.js": ["../../sdk/typescript/src/"],
			"@benfen/bfc.js/dapp-kit": ["../../sdk/dapp-kit/src/"]
		}
	},
	"include": ["src", "tests"],
	"references": [
		{ "path": "../../sdk/typescript/" },
		{ "path": "../../sdk/kiosk/" },
		{ "path": "../../sdk/wallet-kit/react/" }
	]
}
