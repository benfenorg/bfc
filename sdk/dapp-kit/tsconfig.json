{
	"extends": "../build-scripts/tsconfig.shared.json",
	"include": ["src"],
	"compilerOptions": {
		"module": "CommonJS",
		"outDir": "dist/cjs",
		"isolatedModules": true,
		"jsx": "react-jsx",
		"baseUrl": "..",
		"rootDir": "src",
		"paths": {
			"@benfen/bfc.js/transactions": ["../typescript/src/builder/export.ts"],
			"@benfen/bfc.js/*": ["../typescript/src/*"],
			"@benfen/bfc.js": ["../typescript/src/"]
		}
	},
	"references": [{ "path": "../typescript" }]
}
